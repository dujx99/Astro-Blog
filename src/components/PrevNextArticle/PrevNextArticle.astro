---
const { prev, next } = Astro.props;
import "./PrevNextArticle.less";
---

<section class="otarticle">
	<a class="art-item" style={`background-image: url('${prev.cover}')`} href={prev.id}><span class="ellipsis line-2">{prev.title}</span></a>
	<a class="art-item" style={`background-image: url('${next.cover}')`} href={next.id}><span class="ellipsis line-2">{next.title}</span></a>
</section>
